{
  "name": "cerba",
  "version": "1.0.2",
  "description": "Tool to help build monorepo projects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/reggi/cerba.git"
  },
  "license": "ISC",
  "author": "Thomas Reggi",
  "main": "./build/cerba.js",
  "bin": "./build/bin.js",
  "scripts": {
    "build": "rm -rf ./build/ && tsc",
    "coverage:open": "open ./coverage/index.html",
    "lint:check": "gts check",
    "lint:fix": "gts fix",
    "open:coverage": "npm run coverage:open",
    "require-check": "require-check ./",
    "shebang-check": "shebang-check ./package.json",
    "sortme": "npx sort-package-json",
    "test": "mocha \"src/**/*_test.ts\"",
    "test:coverage": "npm run test:coverage-html && npm run open:coverage",
    "test:coverage-ci": "nyc npm test",
    "test:coverage-html": "nyc --reporter=html npm test",
    "test:update-snap": "CHAI_JEST_SNAPSHOT_UPDATE_ALL=true npm run test",
    "ts-node": "ts-node"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/chai-jest-snapshot": "^1.3.6",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.2",
    "@types/mocha": "^8.0.1",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^14.0.22",
    "@types/sinon": "^9.0.4",
    "chai": "^4.2.0",
    "chai-jest-snapshot": "^2.0.0",
    "eslint": "^6.0.0",
    "gts": "^2.0.2",
    "mocha": "^10.1.0",
    "mock-fs": "^4.13.0",
    "nyc": "^15.1.0",
    "require-check": "^1.0.2",
    "shebang-check": "^1.0.5",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": ">=11.14.0"
  },
  "dependencies": {
    "@babel/parser": "^7.12.3",
    "@babel/traverse": "^7.12.1",
    "@babel/types": "^7.12.1",
    "@types/babel__traverse": "^7.0.15",
    "@types/strip-json-comments": "^3.0.0",
    "@types/yargs": "^15.0.9",
    "debug": "^4.2.0",
    "fs-exists": "^0.1.1",
    "fs-extra": "^9.0.1",
    "strip-json-comments": "^3.1.1",
    "yaml": "^1.10.0",
    "yargs": "^16.1.0"
  }
}
